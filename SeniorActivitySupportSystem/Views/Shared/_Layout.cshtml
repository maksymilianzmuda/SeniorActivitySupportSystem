<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeniorActivitySupportSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SeniorActivitySupportSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Hamburger Menu Button -->
        <button class="menu-toggle" onclick="toggleMenu()">☰</button>

        <!-- Sidebar Menu -->
        <div class="menu" id="menu">
            <a href="/" onclick="toggleMenu()">Home</a>
            <a href="/sportgroup" onclick="toggleMenu()">Groups</a>
            <a href="/sportevent" onclick="toggleMenu()">Events</a>
            <a href="/privacy" onclick="toggleMenu()">Privacy</a>
        </div>

        <!-- Overlay for closing the menu when clicking outside -->
        <div class="overlay" id="overlay" onclick="toggleMenu()"></div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script> <!-- Dodajemy plik menu.js -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
