@using Microsoft.AspNetCore.Identity
@using SeniorActivitySupportSystem.ViewModel
@model DashboardViewModel
@inject SignInManager<AppUser> SignInManager
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true">


<div class="container">
    <div class="row">
        <!-- Profile Card -->
        <div class="col-lg-4">
            <div class="card mb-4" style="background-color: rgba(20, 20, 20, 0.95); border-radius: 20px;">
                <div class="card-body text-center">
                    <img src="@Model.ProfileImageUrl" alt="@Model.FirstName" class="rounded-circle img-fluid" style="width: 150px; border: 4px solid #444;">
                    <h5 class="my-3" style="color: #fff;">@Model.FirstName</h5>
                    <div class="d-flex justify-content-center mb-2">
                        <a asp-controller="Dashboard" asp-action="EditProfile" type="button" class="btn btn-sm btn-primary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Details -->
        <div class="col-lg-8">
            <div class="card mb-4" style="background-color: rgba(20, 20, 20, 0.95); border-radius: 20px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0" style="color: #fff;">First Name: </p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.FirstName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0" style="color: #fff;">Last Name: </p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.LastName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0" style="color: #fff;">Gender</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Gender</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0" style="color: #fff;">Date of Birth</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0" style="color: #fff;">Address</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Street, @Model.City, @Model.PostalCode</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="bio" style="color: #fff;">Bio</label>
                        </div>
                        <div class="col-sm-9">
                            <textarea id="bio" class="form-control" rows="5" readonly>@Model.Bio</textarea>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

    <div class="collapsible-container">
        <button class="collapsible">Your Sport Groups</button>
        <div class="collapsible-content">
            @foreach (var item in Model.SportGroups)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="SportGroup" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="SportGroup" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="SportGroup" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.SportGroupCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="collapsible">Your Sport Events</button>
        <div class="collapsible-content">
            @foreach (var item in Model.SportEvents)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="SportEvent" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="SportEvent" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="SportEvent" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.EventCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .collapsible {
        background-color: #444;
        color: white;
        cursor: pointer;
        padding: 15px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 18px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

        .collapsible.active, .collapsible:hover {
            background-color: #555;
        }

    .collapsible-content {
        padding: 0 15px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }
</style>

<script>
    document.querySelectorAll('.collapsible').forEach(button => {
        button.addEventListener('click', function () {
            this.classList.toggle('active');
            var content = this.nextElementSibling;
            if (content.style.maxHeight) {
                content.style.maxHeight = null;
            } else {
                content.style.maxHeight = content.scrollHeight + 'px';
            }
        });
    });
</script>


