@using SeniorActivitySupportSystem.Data.Enum
@using SeniorActivitySupportSystem.ViewModel
@model EditSportEventViewModel

<link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />

<a href="@Url.Action("Index", "SportEvent")" class="btn-back">&larr; Back</a>

<div class="form-wrapper">
    <div class="form-container">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" id="AppUserId" name="AppUserId" value="@Model.AppUserId" />
            <input type="hidden" value="AddressId" id="AddressId" />
            <div class="form-row">
                <div class="form-group" style="flex: 1; margin-right: 10px;">
                    <label asp-for="Name">Sport Event Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Sport Event Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group" style="flex: 1; margin-left: 10px;">
                    <label asp-for="SportEventCategory">Sport Event Type</label>
                    <select asp-for="SportEventCategory" asp-items="@Html.GetEnumSelectList<EventCategory>()" class="form-control">
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="SportEventCategory" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter event description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-row" style="display: flex; gap: 10px;">
                <div class="form-group" style="flex: 1;">
                    <label asp-for="Address.Street">Street</label>
                    <input asp-for="Address.Street" class="form-control" placeholder="1234 Main St" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>

                <div class="form-group" style="flex: 1;">
                    <label asp-for="Address.City">City</label>
                    <input asp-for="Address.City" class="form-control" placeholder="City" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>

                <div class="form-group" style="flex: 1;">
                    <label asp-for="Address.PostalCode">Postal Code</label>
                    <input asp-for="Address.PostalCode" class="form-control" placeholder="41-717" />
                    <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Image">Select Cover Photo</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Save</button>
        </form>
    </div>
</div>

