@{
    ViewData["Title"] = "Home Page";
}

<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Senior Activity Support</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: url('/images/background.jpg') no-repeat center center;
            background-size: 100%; 
            background-attachment: fixed;
        }

        .cover-container {
            background: rgba(0, 0, 0, 0.6);
            border-radius: 15px;
            padding: 20px;
        }

        .btn-custom {
            background-color: #28a745;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #218838;
            }
    </style>
</head>
<body class="d-flex h-100 text-center text-white">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column justify-content-center align-items-center">
        <header class="mb-auto w-100">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">SASS</h3>
                <nav class="nav nav-masthead justify-content-center">
                    <a class="nav-link active text-white" href="#">Home</a>
                    <a class="nav-link text-white" href="/sportgroup">Groups</a>
                    <a class="nav-link text-white" href="/sportevent">Events</a>
                    <a class="nav-link text-white" href="/privacy">Privacy</a>
                </nav>
            </div>
        </header>

        <main class="px-3">
            <h1 class="fw-bold">Welcome to SASS</h1>
            <p class="lead">Stay active and connected! Senior Activity Support is a community platform where seniors can find groups, join events, and enjoy an active lifestyle together.</p>
            <p>
                <a href="#" class="btn btn-lg btn-custom fw-bold">Sign in now!</a>
            </p>
        </main>

        <footer class="mt-auto text-white-50">
            <p>&copy; 2025 Senior Activity Support</p>
        </footer>
    </div>
</body>
</html>